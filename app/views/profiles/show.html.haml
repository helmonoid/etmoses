%ul
  %li== Key: #{ @profile.key }
  %li== Curve file name: #{ @profile.curve_file_name }

.charts-holder
  .graph.line-chart{ data: { url: profile_path(@profile, format: :json), curve_type: @profile.class.name.underscore, type: 'profile_chart' } }

%select.load-date.form-control
  = load_date_options

.commit
  = link_to('Download', @profile.curve.url, class: 'btn')
  %span.or or
  = link_to_if(policy(@profile).edit?, 'Edit', edit_profile_path(@profile))
  = link_to_if(policy(@profile).destroy?, 'Delete', profile_path(@profile), method: 'delete', data: { confirm: 'Are you sure you want to delete this profile?' })

= link_to 'â—„ All load profiles', profiles_path
