%tr
  %td
    = image_tag 'hamburger-menu.png'

  %td.editable
    %select.form-control.key
      = options_for_dispatchable_heat_source_plant_types(list_item.key)

  %td.editable
    %input.form-control{name: 'heat_capacity', value: list_item.heat_capacity, data: { round: 1, data_type: 'float' }}

  %td.editable
    %input.form-control{name: 'units', value: list_item.units, data: { round: 2, data_type: 'float' }}

  %td.editable
    %select.form-control.stakeholder
      = options_for_all_stakeholders(list_item.stakeholder)

  %td.editable.total_initial_investment
    %input.form-control{name: 'total_initial_investment', value: list_item.total_initial_investment, data: { round: 1, data_type: 'float' }}

  %td.editable.technical_lifetime
    %input.form-control{name: 'technical_lifetime', value: list_item.technical_lifetime, data: { round: 1, data_type: 'integer' }}

  %td.editable.om_costs_per_year
    %input.form-control{name: 'om_costs_per_year', value: list_item.om_costs_per_year, data: { round: 1, data_type: 'float' }}

  %td.editable.marginal_heat_costs
    %input.form-control{name: 'marginal_heat_costs', value: list_item.marginal_heat_costs, data: { round: 2, data_type: 'float' }}

  %td.editable.distance
    %input.form-control{name: 'distance', value: list_item.distance, data: { round: 1, data_type: 'float' }}

  %td.editable.hidden
    %input.form-control{name: 'priority', value: list_item.priority, data: { data_type: 'integer' }}

  %td
    = link_to '#', class: 'add-row text-success' do
      %span.glyphicon.glyphicon-plus

  %td
    = link_to '#', class: 'remove-row text-danger' do
      %span.glyphicon.glyphicon-remove
